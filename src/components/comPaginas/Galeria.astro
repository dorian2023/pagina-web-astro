      <video
        src="/vanesa222.mp4"
        autoplay
        loop
        muted
        class="rounded-xl left-0 top-0 bottom-0 w-full h-full object-cover"
      >
      </video>
    </div>
  </GaleriaItems>

  <GaleriaItems
    class=""
    title="MARIANA"
    href="https://i.ibb.co/GpP2tDF/mariana1.png"
  >
