>
  </GaleriaItems>

  <GaleriaItems
  class=""
  title=""
  href="https://i.ibb.co/dKKv7Sw/nicole292.png"
  >
  </GaleriaItems>

</div>


<script>
  import PhotoSwipeLightbox from "photoswipe/lightbox";

  const lightbox = new PhotoSwipeLightbox({
    gallery: "#gallery",
    children: "a",
    pswpModule: () => import("photoswipe"),
  });
  lightbox.init();
</script>
