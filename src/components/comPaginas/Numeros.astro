---
import { CountUp } from "./CountUp";
---

<section class="max-w-6xl mx-auto py-20 px-20">
  <h2 class="text-6xl text-center text-balance mb-20">MUEBLES BELLAGIO</h2>
  <div class="grid grid-cols-3">

    <div class="flex flex-col justify-center items-center">
      <span class="shadow1 text-7xl font-bold tabular-nums tracking-tighter"
        ><CountUp client:visible initial={0} final={69.9} decimal={1} /> M</span
      >
      <span class="uppercase opacity-50"> de Visualizaciones</span>
    </div>

    <div class="shadow1 flex flex-col justify-center items-center"> 
      <span class="text-7xl font-bold tabular-nums tracking-tighter">
        <CountUp client:visible initial={1} final={325} />
      </span>

      <span class="uppercase opacity-50"> Productos Nuevos</span>
    </div>

    <div class="shadow1 flex flex-col justify-center items-center">
      <span class="text-7xl font-bold tabular-nums tracking-tighter"
        ><CountUp client:visible initial={0} final={108.98} decimal={2} /> M$</span
      >
      <span class="uppercase opacity-50"> seguidores</span>
    </div>
  </div>
</section>

<style>
  .shadow1{
    text-shadow: 0 0 10px rgba(247, 245, 133, 0.9);
  }

</style>