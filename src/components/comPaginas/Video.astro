---
import Buttons from "./Buttons.astro";
interface Props {
	src: string;
}

const {src} = Astro.props;
---




<div class=" w-full relative place-content-center">

    <video 
        src={src} 
        autoplay 
        loop 
        muted  
        class="tamanoA w-full h-auto object-cover aspect-square md:aspect-video animate-fade-in animate-ease-in animate-duration-1000 aspect-ratio-8/10"
        style="clip-path: polygon(0 0, 100% 0, 100% 95%, 55% 100%, 50% 100%, 0 95%);">
    </video>
    <video 
        src={src}  
        autoplay 
        loop 
        muted  
        class="absolute  h-full w-full top-0 start-0 blur-3xl -z-10 animate-fade-in animate-ease-in animate-duration-1000 "
        style="">
    </video>

    <div
        class="absolute inset-0 m-auto -w-full -h-full flex justify-center flex-col items-center"
    >
        <Buttons 
            title="MUEBLES BELLAGIO" 
            href="./" 
		    classe="relative bottom-10 left-0 border rounded-full inline-block border-white px-10 py-6 justify-self-end hover:bg-white hover:text-black duration-500"
        />
    </div>
</div>

<style>
    .tamanoA{
        height: 55em;
    }

</style>