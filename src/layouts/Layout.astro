---
import Header from '../components/comPaginas/Header.astro';
import '@fontsource/charm';
interface Props {
	description: string;
	title: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body>
		<Header client:load/>
		<slot />
	</body>
</html>
<style is:global>
	:root{
		color-scheme: dark;
	}
	html {
		font-family: 'Charm', system-ui, sans-serif, cursive;
		background: #000000;
	}
	p{
		color: rgba(255, 255, 255, 0.9);
		line-height: 1.4;
		margin-bottom: 1em;
		font-weight: 100;
		font-size: 1em;
		letter-spacing: .5px;
	}
	p strong{
		color: white;
		font-weight: 700;
	}
	#header-nav{
		animation: blur linear both;
		animation-timeline: scroll();
		animation-range: 0 500px ;
	}
	a{

		font-size: xx-large;
	}
	#footer-pag{
		box-shadow: 
			0px 5px 50px -5px rgba(0, 0, 0, 0.1),
			0px, 0px, 0 1px rgba(0,0,0,0.3);
		background: rgba(0,0,0, 0.3);
		backdrop-filter: blur(10px)
	}
	
	.shadow1 {
    text-shadow: 0 0 3px rgba(247, 245, 133, 0.9);
	}
	.sbox {
		box-shadow: 0 0 10px rgba(247, 245, 133, 0.9);
	}

	@keyframes blur {
		to{
			box-shadow: 
			0px 5px 50px -5px rgba(0, 0, 0, 0.1),
			0px, 0px, 0 1px rgba(0,0,0,0.3);
			background: rgba(0,0,0, 0.3);
			backdrop-filter: blur(10px)
		}		
	}
</style>
